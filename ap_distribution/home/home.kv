<HomeScreen>
    name: 'homescreen'
    
    MDBoxLayout:
        orientation: 'vertical'
        
        MDBoxLayout:
            size_hint_y: .1
            
            MDLabel:
                id: text_home
                padding: 10
                pos_hint_x: .5
                bold: True
                font_style: "Title"
                halign: "left"

        MDDivider:

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
                
            MDListItem:
                ripple_effect: False 
        
                MDListItemSupportingText:
                    id: text_prepared
        
                MDListItemTrailingIcon:
                    icon: 'package-variant-closed-plus'
                    id: icon_prep


            MDListItem: 
                ripple_effect: False

                MDListItemSupportingText:
                    id: text_onroad
                
                MDListItemTrailingIcon:
                    icon: 'package-variant-closed-minus'
                    id: icon_onroad

        MDDivider:

        MDBoxLayout:
            id: box_tabs
            size_hint_y: .7
            
            MDTabsSecondary:
                id: tabs
                size_hint_y: 1

                MDDivider:

                MDTabsItem:
                    ripple_effect: False

                    MDTabsItemText:
                        text: 'RETIRAR'
                        bold: True
            
                MDTabsItem:
                    ripple_effect: False

                    MDTabsItemText:
                        text: 'ENTREGAR'
                        bold: True
                
                MDTabsCarousel:
                    size_hint_y: None
                    size_hint_y: .8
                    
                    MDBoxLayout:

                        MDScrollView:
                            do_scroll_x: False
                            
                            MDList:
                                id: list_prepared


                    MDBoxLayout:
                        
                        MDScrollView:
                            do_scroll_x: False
                            
                            MDList:
                                id: list_onroad




