
<RmScreenManager>
<IconPasword>
<Progress>
    id: progress
    pos_hint: {'center_x': .5, 'center_y': .5}
    size_hint: None, None
    size: "49dp", "50dp"
    md_bg_color: app.theme_cls.transparentColor

    MDCircularProgressIndicator:
        size_hint: None, None
        size: "48dp", "48dp"
        pos_hint: {'center_x': .5, 'center_y': .5}

<Snack>
    y: dp(14)
    orientation: "horizontal"
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint_x: .5

    MDSnackbarSupportingText:
        id: snack_text
        pos_hint: {"center_x": .5}

<ScanAnalyze>
<HomeScreen>
    name: 'homescreen'
    
    MDLabel:
        size_hint_y: .2
        id: text_home
        pos_hint: {'center_x': .5,"center_y": .9}
        bold: True
        font_style: "Title"
        halign: "center"

    MDDivider:
    
        
    MDList:

        id: container
        
        MDListItem: 
            
            MDListItemSupportingText:
                id: text_prepared
            MDListItemTrailingIcon:
                icon: 'package-variant-closed-plus'
                id: icon_prep


        MDListItem: 
            
            MDListItemSupportingText:
                id: text_onroad
            MDListItemTrailingIcon:
                icon: 'package-variant-closed-minus'
                id: icon_onroad


<QrScreen>
    name: 'qrscreen'
    ScanAnalyze:
        id: scan
        aspect_ratio: '16:9'
        extracted_data: self.parent.got_result
    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: (.7, .2)
        pos_hint: {'center_x': .5,'center_y': .1}
        spacing: '15dp'
                        
    
        MDLabel:
            id: lab_qr
            text: ''
            color: 'white'
            bold: True
            font_style: "Headline"
            role: "small"
            pos_hint: {'center_x': .5,'center_y': .5}
                            
                            

<BranchDetails>
    name: 'branchdetailsscreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': .5, 'center_y': 1}
            padding:10
            size_hint_y: .1
            MDIconButton:
                icon: 'keyboard-backspace' 
                pos_hint: {'center_x': .1, 'center_y': .5}
                on_press: root.back_branchsecreen()
            MDLabel:
                id: branch_details_lb
                text: '' 
                halign: 'center'
                font_style: "Title"
                color: app.theme_cls.primaryColor
                bold: True       
                pos_hint: {'center_x': .5, 'center_y': .5}

        MDTabsSecondary:
            id: tabs
            pos_hint: {"center_x": .5, "center_y": .9}
            size_hint_y: .9

            MDDivider:

            MDTabsItem:

                MDTabsItemText:
                    text: 'Retirar'
                    bold: True
       
            MDTabsItem:
                
                MDTabsItemText:
                    text: 'Entregar'
                    bold: True
            MDTabsCarousel:
                size_hint_y: None
                size_hint_y: .8
                
                MDScrollView:
                    do_scroll_x: False
                    MDList:
                        id: branch_details_p

                MDScrollView:
                    do_scroll_x: False
                    MDList:
                        id: branch_details_c
        

<BranchScreen>
    name: 'branchscreen'
    MDScrollView:
        do_scroll_x: False

        MDList:
            id: mdlist

<QrDialog>    
    auto_dismiss: False
    MDDialogHeadlineText:
        text: 'Qr'

    MDDialogSupportingText:
        id: lb_box_card

    MDDialogContentContainer:
        orientation:'vertical'

        MDDivider:

        MDListItem:
            id: item_origin_dialog
            MDListItemLeadingIcon:
                icon:"map-marker-radius-outline"
            MDListItemSupportingText:
                id: origin_dialog

        MDListItem:
            id: item_destin_dialog
            MDListItemLeadingIcon:
                icon:"map-marker-radius"
            MDListItemSupportingText:
                id: destin_dialog

        MDDivider:

    MDDialogButtonContainer:
        spacing:"8dp"
        MDButton:
            on_press: 
                root.close_card()
            MDButtonText:
                text:"Cancelar"
        MDButton:
            id: btn_rec
            disabled: True
            on_press:
                root.receive_route() 
            MDButtonIcon:
                icon: 'package-variant-closed-plus'
            MDButtonText:
                text:'Recibir'



<DialogIp>
    id: dialog_ip
    auto_dismiss: False
    MDDialogContentContainer:

        MDTextField:
            id: url
            text: app.ip
            mode: 'outlined'
            radius: 0, 40, 40, 40
            size_hint_x: .95
            write_tab: False
            on_text: self.text = self.text.replace(" ", "")
            MDTextFieldHintText:
                text: 'Direccion'
            MDTextFieldTrailingIcon:   
                icon: 'ip-network'

    MDDialogButtonContainer:
        spacing:"8dp"
        MDButton:
            on_press: 
                root.close_card()
            MDButtonText:
                text:"Cerrar"
        
        MDButton:
            on_press:
                root.save_ip(url)
            MDButtonText:
                text:'Guardar'
<LoginScreen>
    name: 'loginscreen'
    
    MDTextField:
        id: username
        text: app.user
        mode: 'outlined'
        size_hint_x: .7
        pos_hint: {'center_x': .5, 'center_y': .75}
        on_text: self.text = self.text.replace(" ", "")
        write_tab: False
        radius: 0, 40, 40, 40
        MDTextFieldHintText:
            text: 'Usuario'
        MDTextFieldTrailingIcon:
            icon: "account"
            
    MDTextField:
        id: password
        text: app.passwd
        mode: 'outlined'
        password: True
        size_hint_x: .7
        radius: 0, 40, 40, 40
        pos_hint: {'center_x': .5, 'center_y': .60}
        on_text: self.text = self.text.replace(" ", "")
        write_tab: False
        MDTextFieldHintText:
            text: 'Contrase√±a'
        MDTextFieldTrailingIcon:
            id: eye_pswd      
            icon: 'eye-off'

    MDCheckbox:
        id: cb
        size_hint: None, None
        width: "30dp"
        height: "30dp"
        pos_hint: {'center_x': .8, 'center_y': .5}
        on_press: 
            password.password = False  if password.password == True else True
            eye_pswd.icon = "eye" if eye_pswd.icon == "eye-off" else "eye-off"        

    MDButton:
        theme_width: "Custom"
        height: "56dp"
        size_hint_x: .7
        pos_hint: {'center_x': .5, 'center_y': .4}
        style: "outlined"
        on_press:
            root.parent.progress(root)
        on_release:        
            root.login_a(username, password)
        
        MDButtonText:
            id: text
            text:'Login'
            pos_hint: {"center_x": .5, "center_y": .5}
        
        MDButtonIcon:
            icon: 'login'
            x: text.x - (self.width + dp(10))
    
    MDFabButton:
        style:'standard' 
        icon: 'ip-network'
        color_map: 'surface'
        pos_hint: {"center_x": .9, 'center_y': .1}
        line_color: app.theme_cls.primaryColor
        on_press: root.open_ipdialog()

<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


MDBoxLayout:
    orientation: "vertical"
    md_bg_color: app.theme_cls.backgroundColor
    
    MDTopAppBar:
        type: "small"
        id: box_header
        theme_bg_color: "Custom"
        md_bg_color: app.theme_cls.primaryColor
           
        MDTopAppBarLeadingButtonContainer:

            MDActionTopAppBarButton:
                id: switch_theme
                icon: 'theme-light-dark'
                on_release: app.switch_theme_style()

        MDTopAppBarTitle:
            
            id: title_text
            text: "Hoja de Ruta"
            font_style: "Title"
            bold: True  

        MDTopAppBarTrailingButtonContainer:
            pos_hint: {"center_x": 1}

            MDActionTopAppBarButton:
                icon: "account-circle-outline"
                id: btn_log
                on_press: 
                    root.ids.screen_manager.login_out(btn_log, [home_btn, qr_btn, branch_btn])
                    root.ids.qr_screen.close_cam()
 
    RmScreenManager:
        id: screen_manager

        LoginScreen:
            id: login_screen
        
        HomeScreen:
            id: home_screen

        QrScreen:
            id: qr_screen

        BranchScreen:
            id: branch_screen

        BranchDetails:
            id: branch_details

    MDNavigationBar:
        radius: 50, 50, 0, 0
        md_bg_color: app.theme_cls.secondaryContainerColor
        line_color: self.theme_cls.primaryColor


        BaseMDNavigationItem
            id: home_btn
            icon: "home"
            text: "Home"
            disabled: True
            on_press: 
                screen_manager.current= 'homescreen'
                screen_manager.progress(home_screen)
            on_release:
                qr_screen.close_cam()
                home_screen.get_count()                 

        BaseMDNavigationItem
            id: qr_btn
            icon: "qrcode-scan"
            text: "Qr-Scan"
            disabled: True
            on_press:
                screen_manager.progress(qr_screen)
                screen_manager.current= 'qrscreen'     
            on_release:
                qr_screen.on_focus()

        BaseMDNavigationItem
            id: branch_btn
            icon: "map-marker-radius-outline"
            text: "Sucursales"
            disabled: True
            on_press:
                screen_manager.current= 'branchscreen' 
            on_release:
                qr_screen.close_cam()   
                branch_screen.branch_nodes(branch_details)
                
              
            


