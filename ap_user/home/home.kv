<HomeScreen>
    name: 'homescreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            size_hint_y: .1
            MDLabel:
                id: text_home
                padding: 10
                pos_hint_x: .5
                bold: True
                font_style: "Title"
                halign: "left"

        MDDivider:

        MDBoxLayout:
            size_hint_y: .1
            MDListItem:
                id: item_state
                ripple_effect: False
                on_release: root.menu_open()
                MDListItemTertiaryText:
                    id: text_state
                    text: 'ESTADO'

        MDDivider:

        MDBoxLayout:
            id: box_tabs
            size_hint_y: .8
            MDTabsSecondary:
                id: tabs
                size_hint_y: 1

                MDDivider:

                MDTabsItem:

                    MDTabsItemText:
                        id: text_env
                        text: 'ENVIAR'
                        bold: True
            
                MDTabsItem:
                    
                    MDTabsItemText:
                        text: 'RECIBIR'
                        bold: True
                
                MDTabsCarousel:
                    size_hint_y: None
                    size_hint_y: .8
                    MDBoxLayout:

                        MDScrollView:
                            do_scroll_x: False
                            MDList:
                                id: list_send


                    MDBoxLayout:
                        MDScrollView:
                            do_scroll_x: False
                            MDList:
                                id: list_receive




