<DialogCreate>
    id: dialog_create
    auto_dismiss: False
    size_hint_x: .9
    MDDialogContentContainer:

        MDTextField:
            id: text_detail
            mode: "outlined"
            max_height: "200dp"
            multiline: True
            size_hint_x: .8
            radius: 0, 40, 40, 40
            pos_hint: {'center_x': .5, 'center_y': .5 }
            MDTextFieldHelperText:
                text: "Detalle"
                mode: "persistent"
            MDTextFieldMaxLengthText:
                max_text_length: 120

    MDDialogButtonContainer:
        spacing:"8dp"
        
        MDButton:
            on_press:
                root.create_order(text_detail)
            MDButtonText:
                text:'Siguiente'

        MDButton:
            on_press:
                root.dismiss()
            MDButtonText:
                text:'Cancelar'


<CheckB>
    group: 'group'
    on_active: root.check_active(*args) 
        
<OrderCreate>
    name: 'ordercreatescreen'
    MDBoxLayout:
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'horizontal'
            padding:10
            size_hint_y: .1
            MDLabel:
                text: 'Nuevo envio' 
                halign: 'center'
                font_style: "Title"
                color: app.theme_cls.primaryColor
                bold: True       
                pos_hint: {'center_x': .5, 'center_y': .5}

        MDDivider:
        
        MDBoxLayout:
            size_hint_y: .9

            MDScrollView:
                do_scroll_x: False

                MDList:
                    id: mdlist

    MDExtendedFabButton:
        style:'large' 
        color_map: 'secondary'
        pos_hint: {"center_x": .8, "center_y": .1}
        fab_state: "expand"
        line_color: app.theme_cls.primaryColor
        on_press: 
            root.open_dialog()
 
        MDExtendedFabButtonIcon:
            icon: "plus"

        MDExtendedFabButtonText:
            text: "Crear"
            
